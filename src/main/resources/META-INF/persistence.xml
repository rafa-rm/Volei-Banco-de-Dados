		<class>br.edu.unifei.trabalho.volei.Estadio</class>
		<class>br.edu.unifei.trabalho.volei.FundoQuadra</class>
		<class>br.edu.unifei.trabalho.volei.Jogada</class>
		<class>br.edu.unifei.trabalho.volei.Jogador</class>
		<class>br.edu.unifei.trabalho.volei.Partida</class>
		<class>br.edu.unifei.trabalho.volei.Pessoa</class>
		<class>br.edu.unifei.trabalho.volei.Ponto</class>
		<class>br.edu.unifei.trabalho.volei.Posicionamento</class>
		<class>br.edu.unifei.trabalho.volei.Rede</class>
